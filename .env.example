# Environment Configuration
# Set to 'development' for dev or 'production' for prod
DJANGO_ENVIRONMENT=development
DEBUG=True
# Generate a strong secret key for production (50+ characters)
SECRET_KEY=your-secret-key-here-make-it-secure
# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# MongoDB Atlas Configuration
# Your MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=your-app
# Database name within your MongoDB cluster
MONGODB_NAME=your-database-name

# Email Configuration
# For development, use console backend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production, use SMTP
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# JWT Settings
# Generate a strong JWT secret key for production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Logging
# DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# CORS Settings
# Comma-separated list of allowed origins for your frontend
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Security Settings
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
